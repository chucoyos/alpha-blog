<h1>New Article</h1>

<div class="container">
  <%= form_with scope: :article, url: articles_path, local: true do |form| %>
    <div class="field">
      <%= form.label :title %> <br/>
      <%= form.text_field :title %>
    </div>

    <div class="field">
      <%= form.label :description %><br/>
      <%= form.text_area :description %>
    </div>

    <div class="actions">
      <%= form.submit :class => 'btn btn-primary' %>
    </div>
  <% end %>
</div>