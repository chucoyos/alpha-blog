<div class="container">
    <h1 class="text-center mt-4">Listing categories</h1>

    <div class="flickr_pagination">
      <div class="page_info">
        <%= page_entries_info @categories %>
      </div>
      <%= will_paginate @categories, :container => false %>
    </div>

      <% @categories.each do |category| %>

        <div class="row justify-content-center">
          <div class="card mb-3 col-6">
                <div class="card-body">
                  <h5 class="card-title text-center"><%= link_to category.name, category_path(category), class: 'text-decoration-none link-success' %></h5>
                  <H5 class="text-center text-dark"><%= pluralize(category.articles.count, 'article') %></H5>
                </div>
                <div class="card-footer text-muted">
                  <small>
                    Created: <%= time_ago_in_words(category.created_at) %> ago.
                    Edited: <%= time_ago_in_words(category.updated_at) %> ago.
                  </small>
                </div>
          </div>
        </div>

      <% end %>

    <div class="flickr_pagination">
      <div class="page_info">
        <%= page_entries_info @categories %>
      </div>
      <%= will_paginate @categories, :container => false %>
    </div>

</div>