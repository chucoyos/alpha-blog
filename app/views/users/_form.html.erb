<% if @user.errors.any? %>
  <h2>The following errors prevented the <%= @user.class.name.downcase %> from being saved</h2>
  <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with(model: @user, local: true, html: {class: 'shadow p-3 mb-3 bg-info rounded'}) do |f| %>
  <div class="field">
    <%= f.label :username %> <br/>
    <%= f.text_field :username, :placeholder => 'Enter an username', :class => 'form-control shadow rounded' %>
  </div>

  <div class="field">
    <%= f.label :email %> <br/>
    <%= f.email_field :email, :placeholder => 'Enter your email', :class => 'form-control shadow rounded' %>
  </div>

  <div class="field">
    <%= f.label :password %> <br/>
    <%= f.password_field :password, :placeholder => 'Enter your password', :class => 'form-control shadow rounded' %>
  </div>

  <div class="actions mt-4">
    <%= f.submit :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', articles_path, :class => 'btn btn-secondary' %>
  </div>
<% end %>

<div class="container">
<%= link_to 'Back to articles listing', articles_path, :class => 'btn btn-secondary' %>
</div>

