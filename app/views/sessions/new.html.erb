<div class="container">
  <h1 class="text-center mt-3">Log in</h1>

  <%= form_with(scope: :session, url: login_path, local: true, class: 'shadow p-3 mb-3 bg-info rounded') do |f| %>

  <div class="field">
    <%= f.label :email, class: "text-light" %>
    <%= f.email_field :email, :placeholder => 'Enter your email', :class => 'form-control shadow rounded' %>
  </div>

  <div class="field">
    <%= f.label :password, class: "text-light" %>
    <%= f.password_field :password, :placeholder => 'Enter your password', :class => 'form-control shadow rounded' %>
  </div>

  <div class="actions mt-4">
    <%= f.submit "Login", :class => 'btn btn-primary' %>
    <%= link_to 'Cancel', articles_path, :class => 'btn btn-secondary' %>
  </div>
<% end %>

<div class="container">
<%= link_to 'Back to articles listing', articles_path, :class => 'btn btn-secondary' %>
</div>

</div>